# Server Configuration
PORT=3000
HTTPS_PORT=3443
SESSION_SECRET=your-super-secret-session-key-change-this

# Google OAuth (https://console.developers.google.com/)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth (https://github.com/settings/developers)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Admin Local Login (no OAuth required)
# Generate password hash with: node -e "console.log(require('bcrypt').hashSync('yourpassword', 10))"
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=

# Callback URL base (change for production)
CALLBACK_BASE_URL=https://localhost:3443

# NFS Mount Point
NFS_MOUNT_PATH=/mnt/nfs

# OpenSubtitles API (https://www.opensubtitles.com/en/consumers)
# Required for automatic subtitle search feature
OPENSUBTITLES_API_KEY=your-opensubtitles-api-key
