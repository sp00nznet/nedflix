<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Nedflix.Xbox.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Nedflix.Xbox"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    Title="Nedflix">

    <Grid Background="{StaticResource NedflixBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay"
              Grid.RowSpan="3"
              Background="{StaticResource NedflixBackgroundBrush}"
              Visibility="Visible"
              Canvas.ZIndex="100">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="NEDFLIX"
                           FontSize="48"
                           FontWeight="Bold"
                           Foreground="{StaticResource NedflixPrimaryBrush}"
                           HorizontalAlignment="Center" />
                <ProgressRing x:Name="LoadingProgress"
                              IsActive="True"
                              Width="60"
                              Height="60"
                              Margin="0,20,0,0"
                              Foreground="{StaticResource NedflixPrimaryBrush}" />
                <TextBlock x:Name="LoadingText"
                           Text="Loading..."
                           FontSize="16"
                           Foreground="{StaticResource NedflixTextBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0" />
            </StackPanel>
        </Grid>

        <!-- Connection Error Panel -->
        <Grid x:Name="ErrorPanel"
              Grid.RowSpan="3"
              Background="{StaticResource NedflixBackgroundBrush}"
              Visibility="Collapsed"
              Canvas.ZIndex="90">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="500">
                <FontIcon Glyph="&#xE783;"
                          FontSize="64"
                          Foreground="{StaticResource NedflixPrimaryBrush}" />
                <TextBlock Text="Connection Error"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="{StaticResource NedflixTextBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,10" />
                <TextBlock x:Name="ErrorMessage"
                           Text="Unable to connect to your Nedflix server."
                           FontSize="16"
                           Foreground="{StaticResource NedflixTextBrush}"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           HorizontalAlignment="Center" />
                <Button x:Name="RetryButton"
                        Content="Retry Connection"
                        HorizontalAlignment="Center"
                        Margin="0,30,0,0"
                        Padding="30,15"
                        Background="{StaticResource NedflixPrimaryBrush}"
                        Click="RetryButton_Click" />
                <Button x:Name="SettingsButton"
                        Content="Configure Server"
                        HorizontalAlignment="Center"
                        Margin="0,15,0,0"
                        Padding="30,15"
                        Click="SettingsButton_Click" />
            </StackPanel>
        </Grid>

        <!-- Settings Panel -->
        <Grid x:Name="SettingsPanel"
              Grid.RowSpan="3"
              Background="{StaticResource NedflixBackgroundBrush}"
              Visibility="Collapsed"
              Canvas.ZIndex="80">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="600" Padding="40">
                <TextBlock Text="Server Configuration"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="{StaticResource NedflixTextBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30" />

                <TextBlock Text="Nedflix Server URL"
                           FontSize="14"
                           Foreground="{StaticResource NedflixTextBrush}"
                           Margin="0,0,0,5" />
                <TextBox x:Name="ServerUrlInput"
                         PlaceholderText="http://192.168.1.100:3000"
                         Width="400"
                         Padding="15,10"
                         Margin="0,0,0,20" />

                <CheckBox x:Name="RememberServerCheckbox"
                          Content="Remember this server"
                          Foreground="{StaticResource NedflixTextBrush}"
                          IsChecked="True"
                          Margin="0,0,0,30" />

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20">
                    <Button Content="Connect"
                            Padding="40,15"
                            Background="{StaticResource NedflixPrimaryBrush}"
                            Click="ConnectButton_Click" />
                    <Button Content="Cancel"
                            Padding="40,15"
                            Click="CancelSettingsButton_Click" />
                </StackPanel>

                <TextBlock Text="Enter the URL of your Nedflix server running on your local network."
                           FontSize="12"
                           Foreground="Gray"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,30,0,0" />
            </StackPanel>
        </Grid>

        <!-- WebView2 for Nedflix content -->
        <controls:WebView2 x:Name="NedflixWebView"
                           Grid.Row="0"
                           Grid.RowSpan="3"
                           DefaultBackgroundColor="#1a1a2e"
                           Visibility="Collapsed" />

        <!-- Controller hint bar (Xbox only) -->
        <Grid x:Name="ControllerHints"
              Grid.Row="2"
              Background="#80000000"
              Padding="20,10"
              Visibility="Collapsed">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="40">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE7FC;" FontSize="16" Foreground="White" />
                    <TextBlock Text="Select" Foreground="White" VerticalAlignment="Center" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE72B;" FontSize="16" Foreground="White" />
                    <TextBlock Text="Back" Foreground="White" VerticalAlignment="Center" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE768;" FontSize="16" Foreground="White" />
                    <TextBlock Text="Play/Pause" Foreground="White" VerticalAlignment="Center" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE740;" FontSize="16" Foreground="White" />
                    <TextBlock Text="Fullscreen" Foreground="White" VerticalAlignment="Center" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
